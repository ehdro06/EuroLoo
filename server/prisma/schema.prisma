generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Toilet {
  id         Int      @id @default(autoincrement())
  externalId String   @unique
  createdAt  DateTime @default(now())
  reviews    Review[]
}

model Review {
  id        Int      @id @default(autoincrement())
  content   String
  rating    Int
  createdAt DateTime @default(now())
  toiletId  Int
  toilet    Toilet   @relation(fields: [toiletId], references: [id], onDelete: Cascade)
}
